#include <stdio.h>

int main()
{
    int nmr;    /*criando a variavel inteira nmr*/
    
    printf("Digite um número: ");   /*printando no terminal uma frase*/
    scanf("%d", &nmr);  /*salvando resposta na variavel nmr*/
    
    if ((nmr % 3) == 0) {   /*se a sobra de nmr é igual a 0 entao*/
        
        nmr += 1;   /*nmr aumenta em um */
        printf("Multiplo de 3, adcionando uma unidade: %d", nmr);   /*mostra no termional uma frase*/
        
    } else {    /*se nao*/
        
        nmr -= 1;   /*nmr é diminuido em um */
        printf("Não é multiplo de 3, retirando uma unidade: %d", nmr);  /* mostra no terminal uma frase*/
        
    } 
    
    return 0;
    
    }